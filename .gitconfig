[core]
	editor = vim
	excludesFile = ~/.gitignore_global
	#pager = diff-so-fancy | less --tabs=4 -RFX
[user]
	name = tksgi
	email = 23550705+tksgi@users.noreply.github.com
[color]
	ui = true
[alias]
	co = checkout
  br = branch
  st = status
[init]
	tmplatedir = .git_tmp
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[mergetool "nvimdiff"]
  cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"  \"$MERGED\""
[web]
    browser = open
[browser "chrome"]
    cmd = open -a 'Firefox.app'
[ghq]
	root = /Users/kasugaitooru/go/src
[url ":git@github.com:"]
	insteadOf = htps://github.com/
